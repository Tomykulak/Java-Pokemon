<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
>

    <changeSet id="1" author="tomykulak">
        <createTable tableName="arena">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="type" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="tomykulak">
        <createTable tableName="trainer">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <!-- add arena reference into trainer -->
            <column name="arena_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_trainer_arena"
                             referencedTableName="arena" referencedColumnNames="id"/>
            </column>

            <column name="name" type="varchar(255)"/>
            <column name="level" type="bigint"/>
            <column name="wins" type="bigint"/>
            <column name="losses" type="bigint"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="tomykulak">

        <createTable tableName="pokemon">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="type1" type="varchar(255)"/>
            <column name="type2" type="varchar(255)"/>
            <column name="total" type="bigint"/>
            <column name="hp" type="bigint"/>
            <column name="attack" type="bigint"/>
            <column name="defense" type="bigint"/>
            <column name="sp_attack" type="bigint"/>
            <column name="sp_defense" type="bigint"/>
            <column name="speed" type="bigint"/>
            <column name="generation" type="bigint"/>
            <column name="legendary" type="boolean"/>
            <column name="trainer_id" type="bigint"/>
        </createTable>
        <!-- add trainer reference into pokemon -->
        <addForeignKeyConstraint baseTableName="pokemon"
                                 baseColumnNames="trainer_id"
                                 referencedTableName="trainer"
                                 referencedColumnNames="id"
                                 constraintName="fk_pokemon_trainer"/>
    </changeSet>

</databaseChangeLog>